#include <stdio.h>

int main() {
   
int a;
int b;
int c;
int sum;

 printf("Please enter the first number:\n");
    scanf("%d", &a);
printf("Please enter the second number:\n");
    scanf("%d", &b);
printf("Please enter the first number:\n");
    scanf("%d", &c);


sum = a + b + c;

printf("the average of %d, %d, and %d is %d",a, b ,c , sum);
    return 0;
}

