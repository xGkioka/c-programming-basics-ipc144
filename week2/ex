#include<stdio.h>

int main(void){

    float diameter;
    float circumference;
    float radius;
    float area;

   int PI = 3.14159;

    printf("Please enter a radius of a circle\n");
    scanf("%f", &radius);
    
//calculations

diameter = 2 * radius;
circumference = PI * diameter;
area = PI *(radius)*2;

printf("The diameter of a circle is %2f\n", diameter);
printf("The circumference of the circle is %2f\n", circumference);
printf("the area of the circle is %2f\n", area);

return 0;
}


